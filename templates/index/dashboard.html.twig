                        <h4 class="font-weight-normal mb-3"> 1 BITCOIN <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                        </h4>
                        <h2 class="mb-5">R$ {{ btc_to_brl|number_format(2, ',', '.') }}
                        </h2>
                    </div>
                </div>
            </div>

        </div>
    </div>
